<p id="notice"><%= notice %></p>

<h1>Listing Libros</h1>

<table>
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Autor</th>
      <th>Genero</th>
      <th>Isbn</th>
      <th>Portada</th>
      <th>Fregistro</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @libros.each do |libro| %>
      <tr>
        <td><%= libro.titulo %></td>
        <td><%= libro.autor %></td>
        <td><%= libro.genero %></td>
        <td><%= libro.isbn %></td>
        <td><%= libro.portada %></td>
        <td><%= libro.fregistro %></td>
        <td><%= link_to 'Ver', libro %></td>
        <td><%= link_to 'Editar', edit_libro_path(libro) %></td>
        <td><%= link_to 'Eliminar', libro, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Libro', new_libro_path %>
