<%= form_for(@libro) do |f| %>
  <% if @libro.errors.any? %>
    <div class="panel panel-danger">
      <div class="panel-heading">
        <h4><%= pluralize(@libro.errors.count, "error") %> <%= t("impidiÃ³ guardar el libro:") %></h4>
      </div>
      <div class="panel-body">
        <ul>
        <% @libro.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>
  
  <div class="col-sm-12">
    <div class="row">
      <div class="col-sm-5">
        <% if @libro.portada? %>
          <%= image_tag @libro.portada, :class => 'img-responsive portada img-thumbnail' %>
          <h4><%= t("Cambiar portada") %></h4>
          <%= f.file_field :portada %>
        <% else %>
          <h4><%= t("Elegir portada") %></h4>
          <%= f.file_field :portada %>
        <% end %>
      </div>
      <div class="col-sm-7">
        <form>
          <!-- grupo -->
          <div class="form-group">
              <h4><%= t("titulo") %></h4>
              <%= f.text_field :titulo, :class => 'form-control' %>
          </div>
          <!-- grupo -->
          <div class="form-group">
              <h4><%= t("autor") %></h4>
              <%= f.text_field :autor, :class => 'form-control' %>
          </div>
          <!-- grupo -->
          <div class="form-group">
              <h4><%= t("genero") %></h4>
              <%= f.select :genero, Libro::GENEROS.map {|c| [t("libro.generos.#{c}"), c]} %>
          </div>
          <!-- grupo -->
          <div class="form-group">
              <h4><%= t("isbn") %></h4>
              <%= f.text_field :isbn, :class => 'form-control' %>
          </div>
          <!-- grupo -->
          <div class="form-group">
            <h4><%= t("idioma") %></h4>
            <%= f.select :idioma, Libro::IDIOMAS.map {|c| [t("libro.idiomas.#{c}"), c]} %>
          </div>
          <!-- grupo -->
          <div class="form-group">
              <h4><%= t("fecha_reg") %></h4>
              <%= f.date_select :fregistro, :class => 'form-control', order: [:day, :month, :year], use_month_numbers: true %>
          </div>
          <!-- grupo -->
          <div class="form-group">
            <h4><%= t("cantidad") %></h4>
            <%= f.number_field :cantidad, :class => 'form-control' %>
          </div>
          <div class="text-right">
            <%= f.submit 'Guardar', :class => 'btn btn-primary' %>
            <%= link_to 'Cancelar', @libro, :class => 'btn btn-default' %>
          </div>
        </form>
      </div>
    </div>
  </div>
<% end %>
