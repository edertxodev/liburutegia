<% if notice %>
  <div class="alert alert-success alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <%= notice %>
  </div>
<% end %>

<div class="col-sm-12">
  <div class="row">
    <div class="col-sm-5">
      <% if @libro.portada? %>
        <%= image_tag @libro.portada, :class => 'img-responsive portada img-thumbnail' %>
      <% else %>
        <img src="/uploads/libro/portada/sinportada.png" class="img-responsive portada img-thumbnail" />
      <% end %>
    </div>
    <div class="col-sm-7">
      <h1><%= @libro.titulo %></h1>
      <p>Libro escrito por <%= link_to @libro.autor, "http://www.google.com/search?ie=UTF-8&q=#{@libro.autor}", :target => '_blank' %></p>
      <div class="table-responsive">
        <table class="table table-bordered">
          <tr>
            <td><b>Género: </b><%= @libro.genero %></td>
          </tr>
          <tr>
            <td><b>ISBN: </b><%= @libro.isbn %></td>
          </tr>
          <tr>
            <td><b>Fecha de registro: </b><%= @libro.fregistro.strftime('%d/%m/%Y') %></td>
          </tr>
        </table>
      </div>
      <div class="col-sm-6 col-sm-offset-6 text-right">
        <%= link_to 'Editar', edit_libro_path(@libro), :class => 'btn btn-primary' %>
        <%= link_to 'Atrás', libros_path, :class => 'btn btn-default' %>
      </div>
    </div>
  </div>
</div>
