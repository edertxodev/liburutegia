  <%= hidden_field_tag :direction, params[:direction] %>
  <%= hidden_field_tag :sort, params[:sort] %>
  
  <table class="table table-bordered table-hover">
    <tr>
      <th><%= sortable "titulo", "Titulo" %></th>
      <th><%= sortable "autor", "Autor" %></th>
      <th><%= sortable "fregistro", "Fecha de registro" %></th>
      <th><%= sortable "cantidad", "Cantidad" %></th>
      <th><%= sortable "disponibles", "Disponibles" %></th>
    </tr>
      <% @libros.each do |libro| %>
      <tr>
        <td><%= link_to libro.titulo, libro %></td>
        <td><%= libro.autor %></td>
        <td><%= libro.fregistro %></td>
        <td><%= libro.cantidad %></td>
        <td><%= libro.disponibles %></td>
      </tr>
      <% end %>
  </table>
  <%= will_paginate @libros, renderer: BootstrapPagination::Rails, :next_label => '&raquo;', :previous_label => '&laquo;' %>
  
  

