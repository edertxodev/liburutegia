<h2 class="page-header">Crear nuevo usuario</h2>
<%= form_for(@user) do |f| %>
	<% if @user.errors.any? %>
	    <div id="error_explanation">
	      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

	      <ul>
	      <% @user.errors.full_messages.each do |message| %>
	        <li><%= message %></li>
	      <% end %>
	      </ul>
	    </div>
    <% end %>

<div class="col-sm-12">
    <div class="row">
      <div class="col-sm-7">
        <form>
          <!-- grupo -->
          <div class="form-group">
              <h4>Nombre de usuario</h4>
              <%= f.text_field :username, :class => 'form-control' %>
          </div>
          <!-- grupo -->
          <div class="form-group">
              <h4>Rol</h4>
              <%= f.collection_select(:role, User::ROLES, :to_s, lambda{|i| i.to_s.humanize}) %>
          </div>
          <!-- grupo -->
          <div class="form-group">
              <h4>Contrase√±a aleatoria</h4>
              <div class="input-group">
              	<%= f.text_field :password, autocomplete: "off", :class => 'form-control pass-aleatoria' %>
              	<span class="input-group-btn">
              		<button type="button" class="btn btn-default regenerar-pass"><span class="glyphicon glyphicon-refresh"></span></button>
              	</span>
              </div>
          </div>
          <div class="text-right">
            <%= f.submit 'Crear usuario', :class => 'btn btn-primary' %>
            <%= link_to 'Cancelar', @libro, :class => 'btn btn-default' %>
          </div>
        </form>
      </div>
    </div>
  </div>
<% end %>