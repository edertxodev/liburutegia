<h1 class="page-header"><%= t('usuarios') %></h1>

<div class="row">
    <div class="col-sm-6">
        <%= link_to t('crear usuario'), new_user_path, :class => 'btn btn-info' %>
    </div>
    <div class="col-sm-6">
        <%= form_tag users_path, :method => 'get', :id => 'form-buscar-usuarios' do %>  
        <div class="col-sm-6 col-sm-offset-6">
          <%= text_field_tag :search, params[:search], :class => 'form-control', :placeholder => t('buscar usuario') %>
        </div>
        <% end %>
    </div>
</div>

<div class="table-responsive" id="tabla-users">
  <%= render 'usuarios' %>
</div>